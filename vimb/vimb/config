set editor-command=ALTERNATE_EDITOR=emacs emacsclient -n %s
set webgl=true
set hardware-acceleration-policy=never
set incsearch=true
set spell-checking=true
set scripts=false

set font-size=12
set monospace-font-size=12
set input-autohide=true

nmap + zI
nmap - zO
nmap = zz

nmap <C-m> sh! mpv $VIMB_URI

shortcut-add d=https://duckduckgo.com/?q=$0
shortcut-add g=https://google.com/search?q=$0
shortcut-default d
